@page "/Setting"
<MudContainer MaxWidth="MaxWidth.Medium">
    <MudSwitch T="bool" @bind-Checked="_autoStart" Label="开机启动"></MudSwitch>
</MudContainer>

@code {
    bool _autoStart = false;

    private void AutoStartCheckChanged(bool autoStart)
    {
        if (OperatingSystem.IsWindows())
        {
            string StartupPath = Environment.GetFolderPath(Environment.SpecialFolder.CommonStartup);
            string CurrentDir = Environment.CurrentDirectory;
            string exeDir = Path.Combine(CurrentDir, @"\ClashCs.exe.lnk");
            File.Copy(exeDir, StartupPath + @"\ClashCs.exe.lnk", true);
        }else if(OperatingSystem.IsLinux()){
            
        }

    }
}